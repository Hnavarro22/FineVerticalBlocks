public class TuitionCalculator {
    public static void main(String[] args) {
        // Initial tuition and annual increase rate
        double initialTuition = 10000.0;
        double increaseRate = 0.05; // 5%

        // Calculate tuition after 10 years
        double futureTuition = initialTuition;
        for (int year = 1; year <= 10; year++) {
            futureTuition *= (1 + increaseRate);
        }

        // Calculate total cost for four years of tuition after the tenth year
        double totalCost = futureTuition * 4;

        // Print the results
        System.out.printf("Tuition after 10 years: $%.2f%n", futureTuition);
        System.out.printf("Total cost for four years' tuition after the tenth year: $%.2f%n", totalCost);
    }
}
