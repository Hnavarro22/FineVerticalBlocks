import java.util.Scanner;

public class AverageCalculator {

    // Overloaded method for integer arrays
    public static int average(int[] array) {
        int sum = 0;
        for (int num : array) {
            sum += num;
        }
        return sum / array.length;  // Returns the average as an integer
    }

    // Overloaded method for double arrays
    public static double average(double[] array) {
        double sum = 0.0;
        for (double num : array) {
            sum += num;
        }
        return sum / array.length;  // Returns the average as a double
    }

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        
        // Array to store the user input values
        double[] numbers = new double[10];

        // Prompt the user to enter ten double values
        System.out.println("Enter 10 double values:");

        for (int i = 0; i < 10; i++) {
            System.out.print("Value " + (i + 1) + ": ");
            numbers[i] = input.nextDouble();
        }

        // Call the overloaded method for double array
        double averageValue = average(numbers);

        // Display the average value
        System.out.printf("The average value is: %.2f\n", averageValue);

        input.close();
    }
}
